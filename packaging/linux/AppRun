#!/bin/bash
set -euo pipefail

HERE="$(dirname "$(readlink -f "$0")")"
export APPDIR="$HERE"
export APPIMAGE="${APPIMAGE:-}"
export ARGV0="${0}"

# Match AppImageKit-style runtime env so bundled multiarch libs are preferred.
export PATH="$HERE/usr/bin:$HERE/usr/sbin:$HERE/usr/games:${PATH:-/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin}"
export LD_LIBRARY_PATH="$HERE/usr/lib:$HERE/usr/lib/i386-linux-gnu:$HERE/usr/lib/x86_64-linux-gnu:$HERE/usr/lib32:$HERE/usr/lib64:$HERE/lib:$HERE/lib/i386-linux-gnu:$HERE/lib/x86_64-linux-gnu:$HERE/lib32:$HERE/lib64${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}"
export XDG_DATA_DIRS="$HERE/usr/share:${XDG_DATA_DIRS:-/usr/local/share:/usr/share}"
export GSETTINGS_SCHEMA_DIR="$HERE/usr/share/glib-2.0/schemas${GSETTINGS_SCHEMA_DIR:+:$GSETTINGS_SCHEMA_DIR}"

# Do not force X11 globally; allow explicit override when needed.
if [ -n "${VIBEFI_GDK_BACKEND:-}" ]; then
    export GDK_BACKEND="$VIBEFI_GDK_BACKEND"
fi

cd "$HERE/usr" || exit 1
exec "$HERE/usr/bin/vibefi" "$@"
